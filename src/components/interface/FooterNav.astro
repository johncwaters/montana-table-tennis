<!-- footer class always needs: myFooter -->
<footer class="myFooter flex lg:hidden">
	<div class="btm-nav">
		<!-- HOME PAGE -->
		<button
			onclick="location.href='/'"
			class="text-primary bg-base-200"
			id="botnav1"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				class="h-5 w-5"
				fill="none"
				viewBox="0 0 24 24"
				stroke="currentColor"
				><path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
				></path>
			</svg>
		</button>
		<!-- CALENDAR -->
		<button
			onclick="location.href='/calendar'"
			class="text-primary bg-base-200"
			id="botnav3"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				class="h-5 w-5"
				fill="none"
				viewBox="0 0 24 24"
				stroke="currentColor"
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="2"
				><rect x="3" y="4" width="18" height="18" rx="2" ry="2"
				></rect><line x1="16" y1="2" x2="16" y2="6"></line><line
					x1="8"
					y1="2"
					x2="8"
					y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line>
			</svg>
		</button>

		<!-- PLAY -->
		<button
			onclick="location.href='/play'"
			class="text-primary bg-base-200"
			id="botnav2"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				class="h-5 w-5"
				fill="none"
				viewBox="0 0 24 24"
				stroke="currentColor"
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="2"
			>
				<g>
					<path
						fill-rule="nonzero"
						d="M11.5 2a9.5 9.5 0 0 1 9.5 9.5 9.46 9.46 0 0 1-1.003 4.254l2.463 2.464a1 1 0 0 1 0 1.414l-2.828 2.828a1 1 0 0 1-1.414 0l-2.464-2.463A9.46 9.46 0 0 1 11.5 21a9.5 9.5 0 0 1 0-19zm5.303 13.388l-1.414 1.414 3.536 3.535 1.414-1.414-3.536-3.535zm1.864-6.105l-9.384 9.384c.7.216 1.445.333 2.217.333a7.48 7.48 0 0 0 2.74-.516l-.972-.974a1 1 0 0 1 0-1.414l2.828-2.828a1 1 0 0 1 1.414 0l.974.972A7.48 7.48 0 0 0 19 11.5c0-.772-.117-1.516-.333-2.217z"
					></path>
				</g>
			</svg>
		</button>
		<!-- NOTIFICATIONS -->
		<button
			onclick="location.href='/notifications'"
			class="text-primary bg-base-200"
			id="botnav4"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				class="h-5 w-5"
				fill="none"
				viewBox="0 0 24 24"
				stroke="currentColor"
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="2"
				><path
					d="M22 17H2a3 3 0 0 0 3-3V9a7 7 0 0 1 14 0v5a3 3 0 0 0 3 3zm-8.27 4a2 2 0 0 1-3.46 0"
				></path>
			</svg>
		</button>
		<!-- MESSAGES -->
		<button
			onclick="location.href='/messages'"
			class="text-primary bg-base-200"
			id="botnav5"
		>
			<svg
				class="h-5 w-5"
				fill="none"
				viewBox="0 0 24 24"
				stroke="currentColor"
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="2"
				><path
					d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"
				></path>
			</svg>
		</button>
	</div>
</footer>

<script>
	//script to change navbar selectors .active on page change
	console.log(window.location.pathname);

	var urlPath = window.location.pathname;

	//remove.active from all first
	for (let i = 1; i < 6; i++) {
		var selector = document.getElementById("botnav" + i);

		selector?.classList.remove("active");
	}

	switch (urlPath) {
		case "/":
			var selector = document.getElementById("botnav1");
			selector?.classList.add("active");
			break;
		case "/calendar":
			var selector = document.getElementById("botnav2");
			selector?.classList.add("active");
			break;
		case "/play":
			var selector = document.getElementById("botnav3");
			selector?.classList.add("active");
			break;
		case "/notifications":
			var selector = document.getElementById("botnav4");
			selector?.classList.add("active");
			break;
		case "/messages":
			var selector = document.getElementById("botnav5");
			selector?.classList.add("active");
			break;
	}
</script>
